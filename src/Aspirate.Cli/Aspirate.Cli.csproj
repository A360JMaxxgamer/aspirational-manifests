<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <OutputType>Exe</OutputType>
    <TargetFramework>net8.0</TargetFramework>
    <AssemblyName>Aspirate</AssemblyName>
  </PropertyGroup>

  <ItemGroup>
    <ProjectReference Include="../Aspirate.Spectre.DependencyInjection/Aspirate.Spectre.DependencyInjection.csproj" />
    <ProjectReference Include="..\Aspirate.Contracts\Aspirate.Contracts.csproj" />
  </ItemGroup>
  
  <ItemGroup>
    <None Update="Example\aspire-manifest.json">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
    </None>
    <None Update="Templates\*.hbs">
      <CopyToOutputDirectory>Always</CopyToOutputDirectory>
    </None>
  </ItemGroup>
  
  <ItemGroup>
    <PackageReference Include="CliWrap" />
    <PackageReference Include="Humanizer" />
    <PackageReference Include="Microsoft.Extensions.Hosting" />
    <PackageReference Include="Serilog" />
    <PackageReference Include="Serilog.Extensions.Hosting" />
    <PackageReference Include="Serilog.Sinks.Console" />
  </ItemGroup>

</Project>
