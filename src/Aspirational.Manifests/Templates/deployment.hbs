---
apiVersion: apps/v1
kind: Deployment
metadata:
  name: {{name}}-deployment
spec:
  replicas: 1
  selector:
    matchLabels:
      app: {{name}}
  template:
    metadata:
      labels:
        app: {{name}}
    spec:
      containers:
      - name: {{name}}
        image: {{name}}:latest
        imagePullPolicy: Always
        ports:
        - containerPort: 80
        envFrom:
        - configMapRef:
            name: {{name}}-env
      restartPolicy: Always